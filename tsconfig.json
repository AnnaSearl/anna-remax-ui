{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./esm",
    "rootDir": "./components",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./components/*"]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
    ],
  },
  "include": [
    "components/**/*",
    "docs/**/*",
    "typings/**/*",
  ]
}
